<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Gradient -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/header_gradient_background"
            android:padding="24dp"
            android:gravity="center_vertical">

            <!-- Robot Icon -->
            <LinearLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/robot_icon_background"
                android:gravity="center"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🤖"
                    android:textSize="24sp" />

            </LinearLayout>

            <!-- Title and Subtitle -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coach Financiero IA"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Siempre disponible para ayudarte"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:alpha="0.9" />

            </LinearLayout>

        </LinearLayout>

        <!-- Personalized Recommendations Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recomendaciones Personalizadas"
                android:textColor="#2C3E50"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Recommendation Card 1: Optimize Subscriptions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/recommendation_card_background"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <!-- Green Arrow Icon -->
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/green_icon_background"
                    android:gravity="center"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📈"
                        android:textSize="20sp" />

                </LinearLayout>

                <!-- Recommendation Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Optimiza tus Suscripciones"
                        android:textColor="#2C3E50"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancela 2 servicios que no usas frecuentemente y ahorra Q45/mes"
                        android:textColor="#7F8C8D"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+Q540 anuales"
                            android:background="@drawable/savings_pill_background"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp"
                            android:padding="6dp"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="Revisar suscripciones"
                            android:textColor="#2C3E50"
                            android:textSize="10sp"
                            android:background="@drawable/review_button_background" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Recommendation Card 2: Food Budget Alert -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/recommendation_card_background"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <!-- Orange Alert Icon -->
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/orange_icon_background"
                    android:gravity="center"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⚠️"
                        android:textSize="20sp" />

                </LinearLayout>

                <!-- Recommendation Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Presupuesto de Alimentación"
                        android:textColor="#2C3E50"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Has superado tu presupuesto de alimentación en 15% este mes"
                        android:textColor="#7F8C8D"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Q180 excedente"
                            android:background="@drawable/excess_pill_background"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp"
                            android:padding="6dp"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="Ajustar presupuesto"
                            android:textColor="#2C3E50"
                            android:textSize="10sp"
                            android:background="@drawable/review_button_background" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Recommendation Card 3: Smart Investment -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/recommendation_card_background"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <!-- Blue Lightbulb Icon -->
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/blue_icon_background"
                    android:gravity="center"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="💡"
                        android:textSize="20sp" />

                </LinearLayout>

                <!-- Recommendation Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inversión Inteligente"
                        android:textColor="#2C3E50"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tienes Q2,000 disponibles que podrían generar 8% anual en inversiones"
                        android:textColor="#7F8C8D"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+Q160 anuales"
                            android:background="@drawable/savings_pill_background"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp"
                            android:padding="6dp"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="Explorar opciones"
                            android:textColor="#2C3E50"
                            android:textSize="10sp"
                            android:background="@drawable/review_button_background" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Chat Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="20dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat con tu Coach"
                android:textColor="#2C3E50"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Chat Messages Container -->
            <ScrollView
                android:id="@+id/chat_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="198dp"
                android:layout_marginBottom="16dp"
                android:background="#F8F9FA"
                android:padding="12dp">

                <LinearLayout
                    android:id="@+id/chat_messages_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Sample AI Message -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal">

                        <!-- AI Avatar -->
                        <LinearLayout
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/ai_avatar_background"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="A"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- AI Message Bubble -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:background="@drawable/ai_message_bubble"
                                android:padding="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="¡Hola! Soy tu coach financiero personal. ¿En qué puedo ayudarte hoy?"
                                    android:textColor="#2C3E50"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10:30"
                                android:textColor="#7F8C8D"
                                android:textSize="10sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <!-- Quick Actions Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acciones rápidas:"
                android:textColor="#2C3E50"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Quick Actions Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- First Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/btn_reduce_expenses"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="¿Cómo puedo reducir gastos?"
                        android:textColor="#2C3E50"
                        android:textSize="11sp"
                        android:background="@drawable/quick_action_button_background"
                        android:layout_marginEnd="4dp"
                        android:drawableTop="@drawable/lightbulb_icon"
                        android:drawablePadding="4dp" />

                    <Button
                        android:id="@+id/btn_analyze_budget"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="Analiza mi presupuesto"
                        android:textColor="#2C3E50"
                        android:textSize="11sp"
                        android:background="@drawable/quick_action_button_background"
                        android:layout_marginStart="4dp"
                        android:drawableTop="@drawable/chart_icon"
                        android:drawablePadding="4dp" />

                </LinearLayout>

                <!-- Second Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_optimize_savings"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="Optimiza mis ahorros"
                        android:textColor="#2C3E50"
                        android:textSize="11sp"
                        android:background="@drawable/quick_action_button_background"
                        android:layout_marginEnd="4dp"
                        android:drawableTop="@drawable/target_icon"
                        android:drawablePadding="4dp" />

                    <Button
                        android:id="@+id/btn_investment_strategies"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="Estrategias de inversión"
                        android:textColor="#2C3E50"
                        android:textSize="11sp"
                        android:background="@drawable/quick_action_button_background"
                        android:layout_marginStart="4dp"
                        android:drawableTop="@drawable/graph_icon"
                        android:drawablePadding="4dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>

<!-- Chat Input Section -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#FFFFFF"
    android:padding="12dp"
    android:paddingBottom="4dp"
    android:layout_marginTop="-16dp"
    android:elevation="8dp">

    <EditText
        android:id="@+id/et_chat_input"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_weight="1"
        android:hint="Escribe tu consulta..."
        android:textColor="#2C3E50"
        android:textColorHint="#7F8C8D"
        android:textSize="14sp"
        android:background="@drawable/chat_input_background"
        android:padding="12dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/btn_send_message"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/send_button_background"
        android:drawableTop="@drawable/send_icon" />

</LinearLayout>

<!-- Bottom Navigation -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#FFFFFF"
    android:padding="8dp"
    android:elevation="8dp">

    <!-- Inicio -->
    <LinearLayout
        android:id="@+id/nav_inicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🏠"
            android:textSize="20sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicio"
            android:textSize="10sp"
            android:textColor="#7F8C8D" />

    </LinearLayout>

    <!-- Análisis -->
    <LinearLayout
        android:id="@+id/nav_analisis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📊"
            android:textSize="20sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Análisis"
            android:textSize="10sp"
            android:textColor="#7F8C8D" />

    </LinearLayout>

    <!-- Sueños -->
    <LinearLayout
        android:id="@+id/nav_suenos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎯"
            android:textSize="20sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sueños"
            android:textSize="10sp"
            android:textColor="#7F8C8D" />

    </LinearLayout>

    <!-- Coach -->
    <LinearLayout
        android:id="@+id/nav_coach"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:background="@drawable/nav_item_selected_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🤖"
            android:textSize="20sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coach"
            android:textSize="10sp"
            android:textColor="#3498DB"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Presupuesto -->
    <LinearLayout
        android:id="@+id/nav_presupuesto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="👤"
            android:textSize="20sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Presupuesto"
            android:textSize="10sp"
            android:textColor="#7F8C8D" />

    </LinearLayout>

</LinearLayout>

</LinearLayout>
