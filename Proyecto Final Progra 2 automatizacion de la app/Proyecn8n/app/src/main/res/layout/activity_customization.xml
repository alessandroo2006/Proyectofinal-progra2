<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA"
    android:padding="24dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personaliza tu Avatar 👤"
            android:textColor="#2C3E50"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Personaliza tu avatar con las recompensas que has desbloqueado! 🎮"
            android:textColor="#7F8C8D"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Avatar Display -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/balance_card_background"
        android:padding="24dp"
        android:layout_marginBottom="32dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tu Avatar"
            android:textColor="#2C3E50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Avatar View -->
        <com.example.prueba.AvatarView
            android:id="@+id/avatar_view"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/alert_card_background"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Customization Options -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Hair Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/alert_card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💇‍♂️ Peinados"
                    android:textColor="#2C3E50"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/btn_hair_default"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Default"
                        android:textSize="12sp"
                        android:background="@drawable/primary_button_background"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btn_hair_01"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Spiky Azul"
                        android:textSize="12sp"
                        android:background="@drawable/edit_button_background"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_hair_none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sin Pelo"
                    android:textSize="12sp"
                    android:background="@drawable/cancel_button_background" />

            </LinearLayout>

            <!-- Shirt Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/alert_card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="👕 Camisetas"
                    android:textColor="#2C3E50"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/btn_shirt_default"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Blanca"
                        android:textSize="12sp"
                        android:background="@drawable/primary_button_background"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btn_shirt_01"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Roja Rayas"
                        android:textSize="12sp"
                        android:background="@drawable/edit_button_background"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_shirt_none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sin Camiseta"
                    android:textSize="12sp"
                    android:background="@drawable/cancel_button_background" />

            </LinearLayout>

            <!-- Accessories Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/alert_card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🕶️ Accesorios"
                    android:textColor="#2C3E50"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/btn_accessory_sunglasses"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Gafas de Sol"
                        android:textSize="12sp"
                        android:background="@drawable/edit_button_background"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btn_accessory_none"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sin Accesorios"
                        android:textSize="12sp"
                        android:background="@drawable/cancel_button_background"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btn_reset_avatar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Resetear Avatar"
                    android:textSize="14sp"
                    android:background="@drawable/cancel_button_background"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btn_save_avatar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Guardar"
                    android:textSize="14sp"
                    android:background="@drawable/primary_button_background"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
