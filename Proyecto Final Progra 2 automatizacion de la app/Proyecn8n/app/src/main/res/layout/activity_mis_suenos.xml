<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- AppBar with Gradient -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/appbar_gradient_background"
        android:padding="24dp"
        android:gravity="center_vertical"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mis Sueños"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Convierte tus metas en realidad"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:alpha="0.9"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- Floating Add Button -->
        <ImageView
            android:id="@+id/btn_add_dream"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/floating_add_button_background"
            android:src="@drawable/ic_add"
            android:scaleType="centerInside"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:elevation="2dp"
            android:contentDescription="Agregar nuevo sueño" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="#F5F5F5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Total Saved Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_card_background"
                android:padding="16dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Ahorrado para Sueños"
                    android:textColor="#424242"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/txt_total_saved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Q 26,300"
                    android:textColor="#00796B"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="de Q 70,000 objetivo total"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="16dp" />

                <!-- Global Progress Bar -->
                <ProgressBar
                    android:id="@+id/progress_bar_total"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/progress_bar_primary"
                    android:progress="37"
                    android:max="100" />

            </LinearLayout>

            <!-- Dreams Container -->
            <LinearLayout
                android:id="@+id/dreams_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Casa Nueva Dream Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_card_background"
                android:padding="16dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <!-- House Icon -->
                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/icon_background_blue"
                    android:gravity="center"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/house_money_icon"
                        android:scaleType="centerInside" />

                </LinearLayout>

                <!-- Dream Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Title and Priority -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Casa Nueva"
                            android:textColor="#212121"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="alta"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp"
                            android:background="@drawable/priority_badge_high"
                            android:padding="6dp"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                    <!-- Amount and Percentage -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Q 15,000 / Q 50,000"
                            android:textColor="#212121"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30%"
                            android:textColor="#2196F3"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <!-- Progress Bar -->
                    <ProgressBar
                        android:id="@+id/progress_bar_casa_nueva"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/progress_bar_blue"
                        android:progress="30"
                        android:max="100"
                        android:layout_marginBottom="12dp" />

                    <!-- Timeline and Monthly Details -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="⏰"
                                android:textSize="12sp"
                                android:layout_marginEnd="4dp" />

                            <TextView
                                android:id="@+id/txt_casa_nueva_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 meses restantes"
                                android:textColor="#757575"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="🎯"
                                android:textSize="12sp"
                                android:layout_marginEnd="4dp" />

                            <TextView
                                android:id="@+id/txt_casa_nueva_monthly"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Q 11,667/mes"
                                android:textColor="#757575"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_adjust_casa_nueva"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:text="Ajustar"
                            android:textColor="#424242"
                            android:textSize="12sp"
                            android:background="@drawable/button_adjust_background"
                            android:layout_marginEnd="8dp"
                            android:fontFamily="sans-serif-medium" />

                        <Button
                            android:id="@+id/btn_add_funds_casa_nueva"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:text="Agregar"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:background="@drawable/button_add_funds_background"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Fondo de Emergencia Dream Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_card_background"
                android:padding="16dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <!-- Briefcase Icon -->
                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/icon_background_green"
                    android:gravity="center"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/briefcase_money_icon"
                        android:scaleType="centerInside" />

                </LinearLayout>

                <!-- Dream Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Title and Priority -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fondo de Emergencia"
                            android:textColor="#212121"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="media"
                            android:textColor="#212121"
                            android:textSize="10sp"
                            android:background="@drawable/priority_badge_medium"
                            android:padding="6dp"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                    <!-- Amount and Percentage -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Q 8,500 / Q 15,000"
                            android:textColor="#212121"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="57%"
                            android:textColor="#4CAF50"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <!-- Progress Bar -->
                    <ProgressBar
                        android:id="@+id/progress_bar_fondo_emergencia"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/progress_bar_green"
                        android:progress="57"
                        android:max="100"
                        android:layout_marginBottom="12dp" />

                    <!-- Timeline and Monthly Details -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="⏰"
                                android:textSize="12sp"
                                android:layout_marginEnd="4dp" />

                            <TextView
                                android:id="@+id/txt_fondo_emergencia_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 mes restante"
                                android:textColor="#757575"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="🎯"
                                android:textSize="12sp"
                                android:layout_marginEnd="4dp" />

                            <TextView
                                android:id="@+id/txt_fondo_emergencia_monthly"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Q 6,500/mes"
                                android:textColor="#757575"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_adjust_fondo_emergencia"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:text="Ajustar"
                            android:textColor="#424242"
                            android:textSize="12sp"
                            android:background="@drawable/button_adjust_background"
                            android:layout_marginEnd="8dp"
                            android:fontFamily="sans-serif-medium" />

                        <Button
                            android:id="@+id/btn_add_funds_fondo_emergencia"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:text="Agregar"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:background="@drawable/button_add_funds_background"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Loading Animation - Bottom -->
    <ImageView
        android:id="@+id/loading_animation_bottom"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/piggy_bank_loading"
        android:visibility="gone"
        android:background="@drawable/rounded_card_background"
        android:padding="8dp"
        android:scaleType="centerInside" />

</LinearLayout>
