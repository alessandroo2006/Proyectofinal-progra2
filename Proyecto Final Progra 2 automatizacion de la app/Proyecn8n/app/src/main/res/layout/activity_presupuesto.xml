<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AhorroAvatar Coach"
                android:textColor="#2C3E50"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡Ahorra y personaliza tu avatar! 💰🎮"
                android:textColor="#7F8C8D"
                android:textSize="14sp"
                android:layout_marginBottom="24dp" />

        </LinearLayout>

        <!-- Progress Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tu Progreso 💰"
                android:textColor="#2C3E50"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Total Saved Display -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/balance_card_background"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Ahorrado"
                    android:textColor="#7F8C8D"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_total_saved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Q 0.00"
                    android:textColor="#27AE60"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Motivational Message -->
            <TextView
                android:id="@+id/txt_motivational_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¡Comienza tu aventura de ahorro! 🚀"
                android:textColor="#2C3E50"
                android:textSize="16sp"
                android:background="@drawable/alert_card_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

        <!-- Add Savings Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registra tu Ahorro 💸"
                android:textColor="#2C3E50"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <EditText
                    android:id="@+id/et_savings_amount"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Cantidad ahorrada (Q)"
                    android:textColor="#2C3E50"
                    android:textColorHint="#7F8C8D"
                    android:textSize="16sp"
                    android:background="@drawable/edit_text_background"
                    android:padding="12dp"
                    android:inputType="numberDecimal"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btn_add_savings"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="➕"
                    android:textSize="20sp"
                    android:background="@drawable/primary_button_background"
                    android:minWidth="48dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Missions Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Misiones Disponibles 🎯"
                android:textColor="#2C3E50"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Missions Container -->
            <LinearLayout
                android:id="@+id/missions_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Missions will be added dynamically here -->

            </LinearLayout>

        </LinearLayout>

        <!-- Avatar Closet Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mi Armario Virtual 👕"
                    android:textColor="#2C3E50"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_view_closet"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Ver Todo"
                    android:textSize="12sp"
                    android:background="@drawable/edit_button_background"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp" />

            </LinearLayout>

            <!-- Avatar Preview -->
            <LinearLayout
                android:id="@+id/avatar_preview_container"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:background="@drawable/balance_card_background"
                android:padding="16dp"
                android:gravity="center">

                <!-- Avatar will be displayed here -->
                <TextView
                    android:id="@+id/avatar_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="👤"
                    android:textSize="48sp"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tu Avatar"
                        android:textColor="#2C3E50"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/avatar_items_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 items desbloqueados"
                        android:textColor="#7F8C8D"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>

<!-- Bottom Navigation -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#FFFFFF"
    android:padding="8dp"
    android:elevation="8dp">

    <!-- Inicio -->
    <LinearLayout
        android:id="@+id/nav_inicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🏠"
            android:textSize="20sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicio"
            android:textSize="10sp"
            android:textColor="#7F8C8D" />

    </LinearLayout>

    <!-- Análisis -->
    <LinearLayout
        android:id="@+id/nav_analisis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📊"
            android:textSize="20sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Análisis"
            android:textSize="10sp"
            android:textColor="#7F8C8D" />

    </LinearLayout>

    <!-- Sueños -->
    <LinearLayout
        android:id="@+id/nav_suenos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎯"
            android:textSize="20sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sueños"
            android:textSize="10sp"
            android:textColor="#7F8C8D" />

    </LinearLayout>

    <!-- Coach -->
    <LinearLayout
        android:id="@+id/nav_coach"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🤖"
            android:textSize="20sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coach"
            android:textSize="10sp"
            android:textColor="#7F8C8D" />

    </LinearLayout>

    <!-- Presupuesto (Now AhorroAvatar) -->
    <LinearLayout
        android:id="@+id/nav_presupuesto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="💰"
            android:textSize="20sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AhorroAvatar"
            android:textSize="10sp"
            android:textColor="#7F8C8D" />

    </LinearLayout>

</LinearLayout>

</LinearLayout>