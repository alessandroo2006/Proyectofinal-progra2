<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bottom_sheet_background">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grabador de Gasto"
        android:textColor="#2C3E50"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center" />

    <!-- Status Text -->
    <TextView
        android:id="@+id/txt_voice_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escuchando..."
        android:textColor="#3498DB"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center" />

    <!-- Microphone Animation Placeholder -->
    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/microphone_animation_background"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¤"
            android:textSize="32sp" />

    </LinearLayout>

    <!-- Stop Recording Button (Initially Hidden) -->
    <Button
        android:id="@+id/btn_stop_recording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detener GrabaciÃ³n"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:background="@drawable/button_stop_background"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center" />

    <!-- Expense Details (Initially Hidden) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/expense_details_background"
        android:padding="16dp"
        android:layout_marginBottom="24dp">

        <!-- Amount -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monto:"
                android:textColor="#7F8C8D"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/txt_voice_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Q 50.00"
                android:textColor="#2C3E50"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Merchant -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comercio:"
                android:textColor="#7F8C8D"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/txt_voice_merchant"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pollo Campero"
                android:textColor="#2C3E50"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Category -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CategorÃ­a:"
                android:textColor="#7F8C8D"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/txt_voice_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Comida"
                android:textColor="#2C3E50"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <!-- Action Buttons (Initially Hidden) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_cancel_voice_expense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancelar"
            android:textColor="#7F8C8D"
            android:textSize="14sp"
            android:background="@drawable/button_cancel_background"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_confirm_voice_expense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Confirmar"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/button_confirm_background"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>
