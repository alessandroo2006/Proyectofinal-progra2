<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="24dp"
    android:layout_margin="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Editar Categoría"
            android:textColor="#2C3E50"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_close_edit_dialog"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="×"
            android:textColor="#7F8C8D"
            android:textSize="24sp"
            android:background="@drawable/close_button_background"
            android:minWidth="0dp"
            android:minHeight="0dp" />

    </LinearLayout>

    <!-- Category Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <View
            android:id="@+id/category_color_dot"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/category_dot_blue"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/txt_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alimentación"
            android:textColor="#2C3E50"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Current Amount -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monto actual"
        android:textColor="#7F8C8D"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/txt_current_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q 1,200.00"
        android:textColor="#2C3E50"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- New Amount -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuevo monto"
        android:textColor="#2C3E50"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_new_amount"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="0.00"
        android:inputType="numberDecimal"
        android:textColor="#2C3E50"
        android:textColorHint="#7F8C8D"
        android:textSize="14sp"
        android:background="@drawable/input_field_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Percentage Preview -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuevo porcentaje estimado"
        android:textColor="#7F8C8D"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/txt_new_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="35%"
        android:textColor="#3498DB"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel_edit"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Cancelar"
            android:textColor="#7F8C8D"
            android:textSize="16sp"
            android:background="@drawable/cancel_button_background"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_save_edit"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Guardar"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/create_button_background" />

    </LinearLayout>

</LinearLayout>
